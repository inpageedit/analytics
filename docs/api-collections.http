# InPageEdit Analytics API v5
# Install humao.rest-client to make quick tests

# Variables
# @ENDPOINT = https://analytics.ipe.wiki/api
@ENDPOINT = http://localhost:3000/api
# @BEGIN_TIME = {{$datetime iso8601}}

### Index
GET {{ENDPOINT}}
    ?debug=true

### Query user
GET {{ENDPOINT}}/query/user
    # required {string}
    ?userName=机智的小鱼君
    # required {string}
    &siteUrl=https://www.wjghj.cn/wiki/
    # {number}
    &offset=0
    # {number}
    &limit=5
    # {'*' | string}
    &project=*

### Query site
GET {{ENDPOINT}}/query/site
    # required {string}
    ?siteUrl=https://zh.moegirl.org.cn/
    # {number}
    &offset=0
    # {number}
    &limit=5
    # {'*' | string}
    &project=*
    &sort=!_total

### Search users
GET {{ENDPOINT}}/search/user
    # required {string}
    ?userName=机智的小鱼君
    # {string}
    # &siteUrl=https://www.wjghj.cn/wiki/
    # {number}
    &offset=0
    # {number}
    &limit=5
    # {'*' | string}
    &project=*

### Search sites
GET {{ENDPOINT}}/search/sites
    # {string}
    ?siteName=minecraft
    # {string}
    # &siteUrl=fandom.com
    # {number}
    &offset=0
    # {number}
    &limit=5
    # 
    &sort=!_total
    # {'*' | string}
    &project=*

### Database status
GET {{ENDPOINT}}/status
    ?debug=true

### Submit data
POST {{ENDPOINT}}/submit
Content-Type: application/json

{
  "siteUrl": "https://test.ipe.wiki",
  "siteName": "Test Site Name",
  "userName": "机智的小鱼君",
  "featureID": "internal_debug",
  "devMode": true,
}