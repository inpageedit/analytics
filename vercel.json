{
  "rewrites": [
    {
      "source": "/api/:__MODULE(.+?)(/.*)?",
      "destination": "/api/:__MODULE"
    },
    {
      "source": "/api(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api(/)?(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}